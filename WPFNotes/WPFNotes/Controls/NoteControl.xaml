<UserControl x:Class="WPFNotes.Controls.NoteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFNotes.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <StackPanel Margin="20">
        <TextBlock x:Name="titleTextBlock"
                   Text="Note title"
                   FontSize="15"
                   FontWeight="Bold"/>
        <TextBlock x:Name="editedTextBlock"
                   Text="19 Minutes"
                   FontSize="12"
                   Margin="0,10,0,0"
                   Foreground="DodgerBlue"/>
        <TextBlock x:Name="contentTextBlock"
                   Text="asdasdasddasdasdasdasdasdsafas sdafs df sdfsd fsdf "
                   FontSize="12"
                   Foreground="DarkGray"
                   TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
